<!DOCTYPE html>
<html>
<head>
    <%- include('../elements/header'); %>
</head>
<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">
  <%- include('../elements/navigation'); %>
  <!-- Main Sidebar Container -->
  <aside class="main-sidebar sidebar-dark-primary elevation-4">
    <%- include('../elements/sidebar'); %>
  </aside>
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-left">
              <li class="breadcrumb-item"><a href="<%=nodeAdminUrl%>/Dashboard">Dashboard</a></li>
              <li class="breadcrumb-item active">Careers</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-md-12">
          <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Edit Careers</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form  name="careers" action="<%=nodeAdminUrl%>/careers/edit/<%=data[0].sn%>" method="post">
                <div class="card-body">
				<div class="form-group">
                    <label for="name">Position Name *</label>
                    <input type="text" class="form-control" id="name" name="name" value="<%=data[0].name%>" placeholder="Enter dealer name" required pattern=".*\S+.*">
					<span class="glyphicon glyphicon-lock form-control-feedback"></span>
					<span class="error"><%=errorData.name%> </span>
                </div>
				
				<div class="form-group">
                    <label for="address">Address *</label>
                    <input type="text" class="form-control" id="address" name="address" value="<%=data[0].address%>" placeholder="Enter address" required>
					<span class="glyphicon glyphicon-lock form-control-feedback"></span>
					<span class="error"><%=errorData.address%> </span>
                </div>
				  <div class="form-group">
                    <label for="salary">Salary *</label>
                    <input type="text" class="form-control" id="salary" name="salary" value="<%=data[0].salary%>" placeholder="Enter Salary (Best in the industry)" required>
					<span class="glyphicon glyphicon-lock form-control-feedback"></span>
					<span class="error"><%=errorData.salary%> </span>
                </div>
				<div class="form-group">
                    <label for="experience">Experience *</label>
                    <input type="text" class="form-control" id="experience" name="experience" value="<%=data[0].experience%>" placeholder="Enter Experience (10 above years | No Limit)" required pattern=".*\S+.*">
					<span class="glyphicon glyphicon-lock form-control-feedback"></span>
					<span class="error"><%=errorData.experience%> </span>
                </div>
				
				<div class="form-group">
                    <label for="industry_preferred">Industry Preferred *</label>
                    <input type="text" class="form-control" id="industry_preferred" name="industry_preferred" value="<%=data[0].industry_preferred%>" placeholder="Enter Industry Preferred" required>
					<span class="glyphicon glyphicon-lock form-control-feedback"></span>
					<span class="error"><%=errorData.industry_preferred%> </span>
                </div>
				<div class="form-group">
                    <label for="qualification">Qualification *</label>
                    <input type="text" class="form-control" id="qualification" name="qualification" value="<%=data[0].qualification%>" placeholder="Enter qualification" required>
					<span class="glyphicon glyphicon-lock form-control-feedback"></span>
					<span class="error"><%=errorData.qualification%> </span>
                </div>
				
				<div class="form-group">
				<label>Competencies</label>
                <textarea id="competencies" name="competencies" placeholder="Enter competencies"
                          style="width: 100%; height: 100px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;" pattern=".*\S+.*"><%=data[0].competencies%></textarea>
				 
					<span class="glyphicon glyphicon-lock form-control-feedback"></span>
					<span class="error"><%=errorData.competencies%> </span>				 
                </div>
				
				<div class="form-group">
				<label>Roles & Responsibilities</label>
                <textarea class="textarea" id="full_description" name="full_description" placeholder="Place some text here"
                          style="width: 100%; height: 400px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"><%=slashes.removeSlashes(data[0].full_description)%></textarea>
				
					<span class="glyphicon glyphicon-lock form-control-feedback"></span>
					<span class="error"><%=errorData.full_description%> </span>				
                </div>
				
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
				  <input type="hidden" name="sn" id="sn" value="<%=data[0].sn%>"> 
                  <button type="submit" class="btn btn-primary">Submit</button>
				  <button type="submit" class="btn btn-default float-right">Cancel</button>
                </div>
              </form>
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col-->
      </div>
      <!-- ./row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <%- include('../elements/footer'); %>
</div>
<!-- ./wrapper -->
<%- include('../elements/js'); %>
</body>
</html>
