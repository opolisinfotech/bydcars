<!DOCTYPE html>
<html>
<head>
    <%- include('../elements/header'); %>
</head>
<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">
  <%- include('../elements/navigation'); %>
  <!-- Main Sidebar Container -->
  <aside class="main-sidebar sidebar-dark-primary elevation-4">
    <%- include('../elements/sidebar'); %>
  </aside>
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-left">
              <li class="breadcrumb-item"><a href="<%=nodeAdminUrl%>/Dashboard">Dashboard</a></li>
              <li class="breadcrumb-item active">Events</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-md-12">
          <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Edit Events</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form  name="events" enctype="multipart/form-data" action="<%=nodeAdminUrl%>/events/edit/<%=data[0].sn%>" method="post">
                <div class="card-body">
				<div class="form-group">
                    <label for="title">Title *</label>
                    <input type="text" class="form-control" id="title" name="title" value="<%=data[0].title%>" placeholder="Enter events title" required pattern=".*\S+.*">
					<span class="glyphicon glyphicon-lock form-control-feedback"></span>
					<span class="error"><%=errorData.title%> </span>
                </div>

				<div class="form-group">
                    <label for="year">Event Date [ex. 21 May, 2022] *</label>
                    <input type="text" class="form-control" id="events_date" name="events_date" placeholder="Enter event date" required pattern=".*\S+.*" value="<%=data[0].events_date%>>
					<span class="glyphicon glyphicon-lock form-control-feedback"></span>
					<span class="error"><%=errorData.events_date%> </span>
                </div>
				<div class="form-group">
                  <label for="exampleInputFile">Add More Gallery</label>
                  <div class="input-group">
                    <div class="custom-file">
                      <input type="file" id="imgInp" name="myfile" multiple />
                    </div>
                  </div>
                </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
				  <input type="hidden" name="sn" id="sn" value="<%=data[0].sn%>"> 
                  <button type="submit" class="btn btn-primary">Submit</button>
				  <button type="submit" class="btn btn-default float-right">Cancel</button>
                </div>
              </form>
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col-->
      </div>
      <!-- ./row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <%- include('../elements/footer'); %>
</div>
<!-- ./wrapper -->
<%- include('../elements/js'); %>
</body>
</html>
