<!DOCTYPE html>
<html>
<head>
    <%- include('elements/header'); %>
</head>
<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">
  <%- include('elements/navigation'); %>
  <!-- Main Sidebar Container -->
  <aside class="main-sidebar sidebar-dark-primary elevation-4">
    <%- include('elements/sidebar'); %>
  </aside>
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-left">
              <li class="breadcrumb-item"><a href="<%=nodeAdminUrl%>/Dashboard">Dashboard</a></li>
              <li class="breadcrumb-item active">Change Password</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
<!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-md-12">
          <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Change Password</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form action="<%=nodeAdminUrl%>/updatepassword" method="post">
                <div class="card-body"> 
				<div class="form-group">
                    <label for="password">New Password</label>
                    <input type='password' class="form-control" name='password' placeholder="Enter new password" value="" maxlength="15" required pattern=".*\S+.*">
                    <span class="error"><%=errorData.password%> </span>
                  </div>
				<div class="form-group">
                    <label for="category_name">Confirm Password</label>
                    <input type='password' class="form-control" name='confirm_pass' placeholder="Confirm password" value="" maxlength="15" required pattern=".*\S+.*">
					<span class="error"><%=errorData.confirm_pass%> </span>
                </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
				  <input type="hidden"  name="adminId" value="<%= data[0].id %>">
                  <button type="submit" class="btn btn-primary">Save</button>
				  <a href="/admin/welcome" class="btn btn-danger float-right">Cancel</a>
                </div>
              </form>
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col-->
      </div>
      <!-- ./row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
 <%- include('elements/footer'); %>
</div>
<!-- ./wrapper -->
<%- include('elements/js'); %>
</body>
</html>
